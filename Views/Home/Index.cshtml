    <!--Contact Form-->
    <section id="contact">
        <div class="container">
            <div class="row">
                <form asp-action="SendMail">
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                        <h2 class="section-heading">Get in touch!</h2>
                        <hr class="primary">
                        <p>Please, leave your message as below and let's have a chat</p>
                    </div>
                    <div class="container contact">
                        <div class="col-xs-12 col-sm-10 col-lg-8 col-lg-offset-2">
                            <div class="input-group-lg">
                                <label>Name:</label>
                                <input asp-for="UserName" type="text" placeholder="Your name goes here" />
                            </div>
                            <div class="input-group-lg">
                                <label>E-mail:</label>
                                <input asp-for="UserMail" type="text" placeholder="email@youremail.com" />
                            </div>
                            <div class="input-group-lg">
                                <label>Message:</label>
                                <textarea asp-for="UserMessage" rows="20" placeholder="Your message here!"></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-xl page-scroll">Send</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
